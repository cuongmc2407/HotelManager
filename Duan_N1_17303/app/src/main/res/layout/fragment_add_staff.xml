<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tools.AddStaffFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#b2ffba "
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <ImageView
            android:id="@+id/img_Back_Staff"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_Title_Staff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Thêm nhân viên"
            android:textColor="#000000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_Save_Staff"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_save" />
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/ed_Staff_Id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:hint="Mã nhân viên"
        android:enabled="false"
        android:inputType="number"/>
    <EditText
        android:id="@+id/ed_Staff_Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Nhập tên tài khoản"
        android:inputType="text"/>
    <EditText
        android:id="@+id/ed_Staff_Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:hint="Nhập mật khẩu"/>
    <EditText
        android:id="@+id/ed_Staff_Display_Name"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Nhập tên hiển thị"/>
    <EditText
        android:id="@+id/ed_Staff_Date"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Nhập ngày sinh"/>
    <EditText
        android:id="@+id/ed_Staff_Sex"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Nhập giới tính"/>
    <EditText
        android:id="@+id/ed_Staff_Phone"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:hint="Nhập số điện thoại"/>
</LinearLayout>